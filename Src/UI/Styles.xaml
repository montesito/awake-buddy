<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Theme color palette definitions -->
    <SolidColorBrush x:Key="WindowBackground" Color="#1E1E2E"/>
    <SolidColorBrush x:Key="HeaderBackground" Color="#252538"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="AccentColor" Color="#00BFFF"/>
    <SolidColorBrush x:Key="InactiveColor" Color="#444455"/>
    <SolidColorBrush x:Key="LogBackground" Color="#11111B"/>
    <SolidColorBrush x:Key="LogText" Color="#00FF7F"/>

    <!-- Toggle button control template -->
    <Style x:Key="ToggleButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" CornerRadius="30" Background="{StaticResource InactiveColor}" Width="120" Height="60">
                        <Grid>
                            <Ellipse x:Name="knob" Fill="White" Width="50" Height="50" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                            <TextBlock x:Name="textInfo" Text="OFF" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" Foreground="White" FontWeight="Bold"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Tag" Value="On">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource AccentColor}"/>
                            <Setter TargetName="knob" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="knob" Property="Margin" Value="0,0,5,0"/>
                            <Setter TargetName="textInfo" Property="Text" Value="ON"/>
                            <Setter TargetName="textInfo" Property="HorizontalAlignment" Value="Left"/>
                            <Setter TargetName="textInfo" Property="Margin" Value="20,0,0,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
