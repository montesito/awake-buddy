<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AwakeBuddy" Height="450" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                 <!-- Merged dictionary placeholder -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="20" Background="{DynamicResource WindowBackground}" BorderBrush="{DynamicResource HeaderBackground}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/> 
                <RowDefinition Height="*"/>  
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <!-- Header layout -->
            <Grid Grid.Row="0" Background="Transparent" Name="HeaderGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="20,40,0,0">
                    <TextBlock Name="TitleText" Text="AwakeBuddy" Foreground="{DynamicResource TextPrimary}" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Name="SubtitleText" Text="Stay Active" Foreground="{DynamicResource TextSecondary}" FontSize="14"/>
                </StackPanel>

                <!-- Application logo -->
                <Viewbox Grid.Column="1" Width="50" Height="50" Margin="0,40,20,0" HorizontalAlignment="Right">
                    <Grid Width="100" Height="100">
                        <Grid.Resources>
                            <LinearGradientBrush x:Key="LogoGradient" StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#00FFFF" Offset="0"/>
                                <GradientStop Color="#0077BE" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Resources>
                        
                        <!-- Outer boundary -->
                        <Path Data="M 50,15 L 95,50 L 50,85 L 5,50 Z" 
                              Stroke="{StaticResource LogoGradient}" StrokeThickness="3" Fill="Transparent"/>

                        <!-- Inactive state indicator -->
                        <Path Data="M 20,50 L 32,38 L 44,50 L 32,62 Z" 
                              Stroke="{StaticResource LogoGradient}" StrokeThickness="2" Fill="Transparent"/>

                        <!-- Active state indicator -->
                        <Path Data="M 56,50 L 68,38 L 80,50 L 68,62 Z" 
                              Fill="{StaticResource LogoGradient}" Stroke="Transparent"/>
                    </Grid>
                </Viewbox>
                
                <!-- Close button -->
                <Button Name="CloseBtn" Content="r" FontFamily="Webdings" 
                        Foreground="{DynamicResource TextSecondary}" Background="Transparent" BorderThickness="0" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" FontSize="18" Cursor="Hand"
                        Grid.Column="1" Panel.ZIndex="100">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Main content -->
            <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <Button Name="ToggleBtn" Style="{DynamicResource ToggleButtonStyle}" Tag="Off" Cursor="Hand"/>
                    <TextBlock Name="StatusText" Text="Status: Inactive" Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="14"/>
                </StackPanel>
            </Grid>

            <!-- Footer metadata -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="&quot;The best way to predict the future is to invent it&quot; Alan Kay" 
                           Foreground="{DynamicResource TextSecondary}" FontSize="10" FontStyle="Italic" HorizontalAlignment="Center" Opacity="0.7"/>
                <TextBlock Text="by Montesito" 
                           Foreground="{DynamicResource TextSecondary}" FontSize="10" HorizontalAlignment="Center" Margin="0,2,0,0" Opacity="0.5"/>
            </StackPanel>

            <!-- Debug console -->
            <Border Grid.Row="3" Background="{DynamicResource LogBackground}" CornerRadius="0,0,20,20" Margin="1" Padding="10">
                <ScrollViewer Name="LogScroller" VerticalScrollBarVisibility="Auto">
                    <TextBlock Name="ConsoleLog" Text="Ready..." Foreground="{DynamicResource LogText}" FontFamily="Consolas" FontSize="12" TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>
